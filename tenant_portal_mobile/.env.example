# Environment Variables for Tenant Portal Mobile

# Backend API URL (use your computer's local IP for physical device testing)
# For simulator/emulator: http://localhost:3001/api
# For physical device: http://YOUR_LOCAL_IP:3001/api (e.g., http://192.168.1.100:3001/api)
EXPO_PUBLIC_API_URL=http://localhost:3001/api

# Stripe Configuration
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_placeholder_replace_with_real_key

# App Configuration
EXPO_PUBLIC_APP_NAME="Tenant Portal"
EXPO_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
EXPO_PUBLIC_ENABLE_BIOMETRICS=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_CAMERA=true

# Debug Configuration (development only)
EXPO_PUBLIC_ENABLE_DEBUG_LOGGING=true
EXPO_PUBLIC_ENABLE_API_MOCKING=false
